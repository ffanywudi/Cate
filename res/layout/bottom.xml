<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/bottom_bar"
    android:orientation="horizontal" >
    
   <LinearLayout 
       	android:id="@+id/id_tab_car"
        android:layout_width="0dp"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:gravity="center"
    	android:orientation="vertical">
    	
    	<ImageButton 
    	    android:id="@+id/id_tab_car_img"
    	    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="#00000000"
            android:clickable="false"
    		android:src="@drawable/tab_car_pressed"/>
    	
    	<TextView 
    	    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="#ffffff"
    		android:text="找车"
    		android:textSize="12sp"/>
    </LinearLayout>
    
   <LinearLayout 
        android:id="@+id/id_tab_map"
        android:layout_width="0dp"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:gravity="center"
    	android:orientation="vertical">
    	
    	<ImageButton 
    	    android:id="@+id/id_tab_map_img"
    	    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="#00000000"
            android:clickable="false"
    		android:src="@drawable/tab_map_normal"/>
    	
    	<TextView 
    	    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="#ffffff"
    		android:text="附近"
    		android:textSize="12sp"/>
    </LinearLayout>
    
   <LinearLayout
       	android:id="@+id/id_tab_message" 
        android:layout_width="0dp"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:gravity="center"
    	android:orientation="vertical">
    	
    	<ImageButton 
    	    android:id="@+id/id_tab_message_img"
    	    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="#00000000"
            android:clickable="false"
    		android:src="@drawable/tab_message_normal"/>
    	
    	<TextView 
    	    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="#ffffff"
    		android:text="消息"
    		android:textSize="12sp"/>
    </LinearLayout>
    
   <LinearLayout
        android:id="@+id/id_tab_mine" 
        android:layout_width="0dp"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:gravity="center"
    	android:orientation="vertical">
    	
    	<ImageButton
    	    android:id="@+id/id_tab_mine_img" 
    	    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:background="#00000000"
            android:clickable="false"
    		android:src="@drawable/tab_mine_normal"/>
    	
    	<TextView 
    	    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textColor="#ffffff"
    		android:text="我的"
    		android:textSize="12sp"/>
    </LinearLayout>
    
</LinearLayout>
